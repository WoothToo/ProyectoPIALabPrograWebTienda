@model ProyectoPIALabPrograWebTienda.Models.dbModels.Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}

@section CSS{
    <link rel="stylesheet" href="~/css/Productos.css" asp-append-version="true" />
}

<h1>Eliminar</h1>

<h3>¿Seguro que deseas elimianar este elemento?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.PrecioUnitario)*@
            Precio Unitario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnitario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Fotos/Productos/@Html.DisplayFor(modelItem => modelItem.Imagen)">
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.IdcategoriaNavigation)*@
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdcategoriaNavigation.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Idproducto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>
