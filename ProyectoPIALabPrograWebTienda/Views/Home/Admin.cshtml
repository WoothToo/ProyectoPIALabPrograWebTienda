
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Admin";
}

<link rel="stylesheet" href="~/css/OtrasVentanas.css" asp-append-version="true" />

<h1>Menú de Administrador</h1>
<article>
    <div class="container">
        <div class="jumbotron jumbotron-fluid jbt">
            <div class="container">
                <h1 class="display-4">Elija una opción</h1>
                <p class="lead">
                    <a class="nav-link text-white botonadmin btn btn-primary" asp-area="" asp-controller="Categorias" asp-action="Index">     Administrar Categorías     </a>
                    <br />
                    <a class="nav-link text-white botonadmin btn btn-primary" asp-area="" asp-controller="Productos" asp-action="Index">     Administrar Productos     </a>
                </p>
            </div>
        </div>
        <div class="container concards">
        <div class="row">
        <div class="card cardadmin" style="width: 14rem;">
                <img class="card-img-top" src="~/Fotos/Diseño/grafica.gif" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Ventas del último mes.</p>
                </div>
        </div>
        <div class="card cardadmin" style="width: 14rem;">
                <img class="card-img-top" src="~/Fotos/Diseño/piechart.gif" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Salarios</p>
                </div>
                </div>
        <div class="card cardadmin" style="width: 14rem;">
                <img class="card-img-top" src="~/Fotos/Diseño/data.gif" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Datos de proveedores</p>
                </div>
        </div>
        <div class="card cardadmin" style="width: 14rem;">
                <img class="card-img-top" src="~/Fotos/Diseño/moredata.gif" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Impuestos</p>
                </div>
        </div>
        <div class="card cardadmin" style="width: 14rem;">
                <img class="card-img-top" src="~/Fotos/Diseño/moregraphs.gif" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Ventas en línea</p>
                </div>
        </div>
        </div>
        
        </div>
        </div>
    </div>
</article>
