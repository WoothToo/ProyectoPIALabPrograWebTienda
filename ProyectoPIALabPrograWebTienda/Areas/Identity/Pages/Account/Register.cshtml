@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crea una nueva cuenta</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Contraseña</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Nombres" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Nombres">Nombre(s)</label>
                <span asp-validation-for="Input.Nombres" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Apellidos" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Apellidos">Apellido(s)</label>
                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Direccion" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Direccion">Dirección</label>
                <span asp-validation-for="Input.Direccion" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Ciudad" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Ciudad">Ciudad</label>
                <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Pais" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Pais">País</label>
                <span asp-validation-for="Input.Pais" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CodigoPostal" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.CodigoPostal">Código Postal</label>
                <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Usa otro servicio para registrate</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            No hay ningún servicio de autenticación externo configurado. 
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
